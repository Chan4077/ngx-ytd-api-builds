{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "ngx-ytd-api-ng-add",
  "title": "ngx-ytd-api ng-add schematic",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "Name of the project.",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p"
    },
    "importModules": {
      "type": "string",
      "description": "Modules to import into the project's app module.",
      "x-prompt": {
        "message": "Select the modules to import:",
        "type": "list",
        "multiselect": true,
        "items": [
          {
            "value": "comments",
            "label": "NgxYtdApiCommentsModule (Comments API)"
          },
          {
            "value": "search",
            "label": "NgxYtdApiSearchModule (Search API)"
          },
          {
            "value": "videos",
            "label": "NgxYtdApiVideosModule (Videos API)"
          }
        ]
      },
      "aliases": [
        "modules",
        "importApis"
      ]
    },
    "skipSetup": {
      "type": "boolean",
      "description": "Whether to skip setup of the ngx-ytd-api library.",
      "default": false,
      "aliases": [
        "skipInit"
      ]
    }
  }
}
