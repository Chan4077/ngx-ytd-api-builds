  "description": "Schematic to add ngx-ytd-api to an Angular project",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "Name of the project.",
      "$default": {
        "$source": "projectName"
      },
      "alias": "p"
    },
    "skipInstall": {
      "type": "boolean",
      "description": "Whether to skip the installing of dependencies.",
      "default": false,
      "alias": "skip-install"
    }
  },
  "required": [],
  "additionalProperties": false
}
